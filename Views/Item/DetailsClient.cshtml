<script>
   
   var startDate = "@ViewBag.pt", // some start date
            endDate = "@ViewBag.dt",  // some end date
        dateRange = [];           // array to hold the range
    if (startDate == "" || endDate == "") {
         var currentDate = new Date();  
       $(".dates").datepicker().datepicker("setDate", new Date());
       
    }
    else {
        for (var d = new Date(startDate);
            d <= new Date(endDate);
            d.setDate(d.getDate() + 1)) {
            dateRange.push($.datepicker.formatDate('yy-mm-dd', d));
        }

        $('.dates').datepicker({
            beforeShowDay: function (date) {
                var dateString = jQuery.datepicker.formatDate('yy-mm-dd', date);
                
                return [dateRange.indexOf(dateString) == -1];
            }
        });
        $('.dates').change(function () {
            var cin = $('#fromDate').val();
            var checkin = new Date(cin);
            var cout = $('#toDate').val();
            var checkout = new Date(cout);
            var start = new Date(startDate);
             var end = new Date(endDate);
            var date = new Date();
            date.setDate(date.getDate() - 1);
            if (checkin <= start && checkout >= end) {

                $('#fromDate').val('');
                $('#toDate').val('');
            }
        })
    }
       
   
    
</script>
