@model IEnumerable<Project.Models.ViewModel.UserViewModel>
<div class="col-lg-3 col-sm-6">

    <div class="card hovercard">
        <div class="cardheader">

        </div>
        <div class="avatar">

            <img src="~/images/UserPhoto/@ViewBag.Photo" />
        </div>
        <div class="info">
            <div class="title">
                <label> @ViewBag.UserName</label>
             
               
            </div>
            <div class="desc">Role:  @ViewBag.Role</div>
            <div class="desc">Full Name: @ViewBag.FullName</div>
            <div class="desc">Email: @ViewBag.Email</div>
        </div>
        <div class="bottom">
            <button class="btn btn-success" style="color:#3071A9">
                Edit
                <i class="fas fa-edit"></i>
            </button>
            <a class="btn btn-danger btn-sm" rel="publisher"
               href="https://plus.google.com/+ahmshahnuralam">
                <i class="fa fa-google-plus"></i>
            </a>

        </div>
    </div>

</div>