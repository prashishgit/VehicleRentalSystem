@model Project.Models.ViewModel.TestimonyViewModel

@using (Html.BeginForm("TestimonyEdit", "Home"))
{
    @Html.AntiForgeryToken()

    <form role="form">
        <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label">Testimony</label>
            <div class="col-lg-9">
                @Html.HiddenFor(model => model.TestimonyId);
                @Html.TextAreaFor(model => model.TestimonyDescription, new { @class = "textarea", placeholder = "Write your Testimony" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label"></label>

            <div class="col-lg-9">
                <input type="reset" class="btn btn-secondary" value="Cancel">
                <input type="submit" class="btn btn-primary" value="Update Changes">

            </div>

        </div>
    </form>
}


