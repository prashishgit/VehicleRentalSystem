@using Project.Models;

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<aside id="colorlib-hero" class="breadcrumbs">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url('../../images/cover-img-1.jpg');">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 slider-text">
                            <div class="slider-text-inner text-center">
                                <h1>Vehicles Details</h1>
                                <h2 class="bread"><span><a href="index.html">Home</a></span> <span>Vehicle</span></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>

<div class="container">
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning" role="alert">
            @ViewBag.CartMessage
        </div>
    }
    <div class="row row-pb-md">
        <div class="col-md-10 col-md-offset-1">
            <div class="product-name">
                <div class="one-forth text-center">
                    <span>Product Details</span>
                </div>
                <div class="one-eight text-center">
                    <span>Price</span>
                </div>
                <div class="one-eight text-center">
                    <span>Total Amount</span>
                </div>
                <div class="one-eight text-center">
                    <span>Amount Paid</span>
                </div>
                <div class="one-eight text-center">
                    <span>Remove</span>
                </div>
            </div>
            @foreach (var cart in (List<Cart>)Session["Cart"])
            {
                <div class="product-cart">
                    <div class="one-forth">
                        <div class="product-img" style="background-image: url(/images/Vehicle/@cart.Vehicle.VehiclePhoto);">
                        </div>
                        <div class="display-tc">
                            <h3>@cart.Vehicle.VehicleTitle</h3>
                        </div>
                    </div>
                    <div class="one-eight text-center">
                        <div class="display-tc">
                            <span class="price">$@cart.Vehicle.VehiclePrice</span>
                        </div>
                    </div>
                    <div class="one-eight text-center">
                        <div class="display-tc">
                            <input type="text" id="quantity" name="quantity" class="form-control input-number text-center" value="@cart.Vehicle.TotalAmount" disabled>
                        </div>
                    </div>
                    <div class="one-eight text-center">
                        <div class="display-tc">
                            <span class="price">$@cart.Vehicle.AmountPaid</span>
                        </div>
                    </div>
                    <div class="one-eight text-center">
                        <div class="display-tc">
                            <a href="@Url.Action("Delete", "Cart", new { id = cart.Vehicle.VehicleId, onclick = "return confirm('Are you sure you want to delete this?')"})" class="closed"></a>
                        </div>
                    </div>
                </div>

            }

            @*<table class="table is-hoverable is-striped" style="width: 100%">
                    <tr>
                        <th>Vehicle Name:</th>
