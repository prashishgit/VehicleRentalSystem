@model Project.Models.ViewModel.BookingViewModel

@{
    ViewBag.Title = "Book Vehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<aside id="colorlib-hero" class="breadcrumbs">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url('../../images/cover-img-1.jpg');">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 slider-text">
                            <div class="slider-text-inner text-center">
                                <h1>Booking Details</h1>
                                <h2 class="bread"><span><a href="index.html">Home</a></span> <span>Vehicle</span></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>


<div class="container">
    <div class="card" style="width: 90%;">
        <div class="card-body">
            <h3 class="card-title" style="font-weight:bold; font-size:20px">Confirm Booking</h3>
            <hr />
            <div class="row row-pb-lg">
                <div class="col-md-10 col-md-offset-1">
                    <div class="product-detail-wrap">

                        <div class="row">
                            <div class="col-md-5">
                                <div class="product-entry">
                                    <div class="product-img" style="background-image: url(/images/Vehicle/@Model.VehiclePhoto);">
                                    </div>
                                </div>
                            </div>
                            @using (Html.BeginForm("Create_Post", "Booking", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                            {

                                @Html.AntiForgeryToken()
                                <div class="col-md-7">
                                    <div class="desc">
                                        <h3>
                                            @Html.HiddenFor(model => model.VehicleId)
                                            @Html.HiddenFor(model => model.PickUpDate)
                                            @Html.HiddenFor(model => model.DropOffDate)
                                            @Html.HiddenFor(model => model.TotalAmount)
                                            <label>Vehicle Title:</label>
                                            @Html.DisplayFor(model => model.VehicleTitle)
                                        </h3>
                                        <p class="price">
                                            <label>Total Price:</label>
                                            <span> Rs @Html.DisplayFor(model => model.TotalAmount)</span>

                                        </p>
                                        <label>PickUp Date:</label> @Html.DisplayFor(model => model.PickUpDate)
                                        <br />
                                        <label>DropOff Date: </label>@Html.DisplayFor(model => model.DropOffDate)
                                        <br />
                                        <label>Citizenship Photo:</label>
                                        @Html.TextBoxFor(model => model.CitizenshipPhoto, new { @class = "form-control", @Type = "file" })
                                    <br />
                                    <p><input type="submit" value="BOOK NOW" class="btn btn-primary btn-addtocart"> </p>
                                    </div>
                                </div>
                            }|
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>

</div>

